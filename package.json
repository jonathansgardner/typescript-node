{
  "name": "typescript-node",
  "version": "1.0.0",
  "description": "A Typescript Node.js starter project.",
  "main": "index.js",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "prepare": "husky install",
    "start": "npm run build && node build/index.js",
    "start:dev": "nodemon",
    "test": "jest",
    "test:dev": "jest --watchAll"
  },
  "keywords": [
    "typescript",
    "node.js",
    "jest"
  ],
  "author": "Jonathan Gardner",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.5",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "eslint": "^7.29.0",
    "eslint-plugin-jest": "^24.3.6",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  }
}
